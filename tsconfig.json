{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "ESNext",

        "target": "es5",
        "jsx": "react-jsx",

        "allowJs": true,
        "moduleResolution": "node",
        // Для абсолютного импорта
        "baseUrl": "src",
        // "paths": {
        //     "*": ["./src/*"]
        // }

        "esModuleInterop": true,

        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["src"]
}
